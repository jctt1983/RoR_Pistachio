- content_for :title do
  Sign up
- content_for(:custom_css) do
  / this page specific styles
  %link(rel="stylesheet" href="/assets/css/compiled/signup.css")


.login-wrapper
  .box
    .content-wrap
      %h6 Forgot your password?
      = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
        = f.text_field :email, :class => "form-control", :placeholder => "Email", "autocomplete" => "off"

        %div.action
          = f.submit "Send me reset password instructions", class: "btn-glow primary signup"
  .already
    %p Already have an account?
    %a{:href => new_user_session_path } Sign in
